{
  "header": "Weather",
  "okResult": "UploadJSON",
  "name": "EditPluginConfiguration",
  "origin": "Plugin",
  "version": "VERSION",
  "sections": [
    {
      "header": "General",
      "displayType": "Form",
      "items": [
        {
          "text": "Data Endpoint",
          "type": "Header"
        },
        {
          "text": "URL",
          "value": "",
          "type": "String",
          "bindto": "URL",
          "live": true,
          "help": "Enter a URL to the weather endpoint or leave this blank and use the options below to configure one. "
        },
        {
          "text": "OR Use OneCall:",
          "type": "Header"
        },
        {
          "text": "API Key",
          "value": "",
          "type": "String",
          "bindto": "APIKey",
          "live": true,
          "help": "API key from <a href=\"https://openweathermap.org/\" target=\"_blank\">openweathermap.org</a>"
        },
        {
          "text": "API Version",
          "value": "0",
          "type": "Select",
          "bindto": "APIVersion",
          "options": [
            {
              "text": "3.0",
              "value": "3.0"
            },
            {
              "text": "2.0",
              "value": "2.0"
            }
          ],
          "live": true,
          "help": "OpenWeatherMap only supports v2.0 with old accounts. New accounts need to use v3.0 and create a subscription on openweathermap.org (with a free quota)."
        },
        {
          "text": "Lat, Lng",
          "value": "",
          "type": "MapControl",
          "bindto": "LatLng",
          "live": true,
          "help": "Latitude and Longitude eg: -33.8649255,155.0023731"
        },
        {
          "text": "Settings",
          "type": "Header"
        },
        {
          "text": "Update Frequency",
          "value": "",
          "type": "Slider",
          "range": false,
          "min": 1,
          "max": 1200,
          "bindto": "UpdateFrequency",
          "live": true,
          "help": "(Seconds)"
        },
        {
          "text": "Units",
          "value": "0",
          "type": "Select",
          "bindto": "Units",
          "options": [
            {
              "text": "Standard",
              "value": "standard"
            },
            {
              "text": "Metric",
              "value": "metric"
            },
            {
              "text": "Imperial",
              "value": "imperial"
            }
          ],
          "live": true
        },
        {
          "text": "Font Size",
          "value": "",
          "type": "Int32",
          "range": false,
          "min": 8,
          "max": 100,
          "bindto": "FontSize",
          "live": true
        },
        {
          "text": "Foreground",
          "value": "",
          "type": "Color",
          "range": false,
          "min": 8,
          "max": 100,
          "bindto": "Foreground",
          "live": true
        },
        {
          "text": "Background",
          "value": "",
          "type": "Color",
          "bindto": "Background",
          "live": true
        },
        {
          "text": "Show Background",
          "value": "",
          "type": "Boolean",
          "bindto": "DisplayBackground",
          "live": true
        },
        {
          "text": "Position",
          "value": "0",
          "type": "Select",
          "bindto": "Position",
          "options": [
            {
              "text": "None",
              "value": 0
            },
            {
              "text": "Top Left",
              "value": 1
            },
            {
              "text": "Top Center",
              "value": 2
            },
            {
              "text": "Top Right",
              "value": 3
            },
            {
              "text": "Left",
              "value": 7
            },
            {
              "text": "Middle",
              "value": 8
            },
            {
              "text": "Right",
              "value": 9
            },
            {
              "text": "Bottom Left",
              "value": 4
            },
            {
              "text": "Bottom Center",
              "value": 5
            },
            {
              "text": "Bottom Right",
              "value": 6
            }
          ],
          "live": true
        },
        {
          "text": "Format",
          "value": "0",
          "type": "TextArea",
          "bindto": "Format",
          "live": true,
          "help": "String format for weather info. Available tags: {icon} {main} {description} {wind} {windDir} {windDeg} {gust} {temp} {feelsLike} {humidity} {uvi}"
        }
      ]
    },
    {
      "header": "Events",
      "displayType": "Form",
      "help": "Generate temperature and gust events if greater than a set limit or if the main status changes. See actions in the camera to respond to these events.",
      "items": [
        {
          "text": "Temperature Limit",
          "value": "",
          "type": "Int32",
          "bindto": "TempLimit"
        },
        {
          "text": "Gust Limit",
